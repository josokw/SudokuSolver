    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sudoku Data01.sdk",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/sudoku",
            "args": ["../puzzles/Data01.sdk"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
